.categoryContent {
  background-color: #dedede;
  width: 100%;
  height: 100%;
}

.categoryList {
  height: 100%;
  width: 185rpx;
  background-color: #fff;
  position: absolute;
  top: 0;
  left: 0;
}

.categoryDetail {
  position: absolute;
  top: 0;
  left: 187rpx;
  width: 563rpx;
  height: 100%;
  background-color: #fff;
}

.categoryListItem {
  height: 97rpx;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
  display: table;
}

.categoryListItem text{
  display: table-cell; 
  vertical-align:middle;
}

.activeBar {
  height:100%;
  width:8rpx;
  float: left;
}

.categoryImg {
  width: 522rpx;
  height: 178rpx;
  margin: 20rpx;
  border-radius: 8rpx;
}

.sortContent {
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.sortContent .oriSort{
  width: 187rpx;
  float: left;
  height: 40rpx;
  line-height: 40rpx;
}

.sortContent .sortItem{
  width: 187rpx;
  float: left;
  height: 40rpx;
  line-height: 40rpx;
  position: relative;
}

.sortItem .sortDown{
  top:25rpx;
  left: 150rpx;
  position: absolute;
  border: 10rpx solid #fff;
  width:10rpx;
  height:10rpx;
  border-top-color: #444;
  background-color: #dedede;
  box-sizing: border-box;
}

.sortItem .sortUp{
  top:0rpx;
  left: 150rpx;
  position: absolute;
  border: 10rpx solid #fff;
  width:10rpx;
  height:10rpx;
  border-bottom-color: #444;
  background-color: #dedede;
  box-sizing: border-box;
}

.secCategoryItem {
  width: 548rpx;
  border: 1rpx #dedede solid;
  height: 156rpx;
  float: left;
  margin:7rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.secCategoryImg {
  width: 154rpx;
  height: 136rpx;
  display: block;
  float: left
}

.secCategoryDesCon{
  width: 371rpx;
  height: 136rpx;
  float: left;
  text-align: left;
}

.secCategoryName {
  font-size: 26rpx;
  line-height: 30rpx;
  height: 90rpx;
  width: 100%;
  display: block;
  overflow: hidden;
}

.secCategoryPrice {
  font-size: 24rpx;
  line-height: 15rpx;
  width: 200rpx;
  display: block;
  color: red;
  float: left
}

.secCategoryAdd{
  float: right;
  width:30rpx;
  height:30rpx;
  border-radius: 15rpx;
  border: 1rpx solid red;
  line-height: 20rpx;
  text-align: center;
  color: red
}

.secCategoryBottom{
  height: 30rpx;
}