.categoryContent {
  background-color: #dedede;
  width: 100%;
  height: 100%;
}

.categoryList {
  height: 100%;
  width: 185rpx;
  background-color: #fff;
  position: absolute;
  top: 0;
  left: 0;
}

.categoryDetail {
  position: absolute;
  top: 0;
  left: 187rpx;
  width: 563rpx;
  height: 100%;
  background-color: #fff;
}

.categoryListItem {
  height: 97rpx;
  text-align: center;
  font-size: 30rpx;
  width: 100%;
  line-height: 97rpx;
}

.activeBar {
  height:100%;
  width:8rpx;
  float: left;
}

.categoryImg {
  width: 522rpx;
  height: 178rpx;
  margin: 20rpx;
  border-radius: 8rpx;
}

.categoryName {
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.secCategoryItem {
  width: 174rpx;
  border: 1rpx #dedede solid;
  height: 230rpx;
  float: left;
  margin:7rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.secCategoryImg {
  width: 100%;
  height: 136rpx;
  display: block;
}

.secCategoryName {
  font-size: 26rpx;
  line-height: 30rpx;
  height: 60rpx;
  text-align: center;
  width: 100%;
  display: block;
  overflow: hidden;
  margin-top: 10rpx;
}