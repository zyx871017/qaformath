/* detail.wxss */

page {
  background-color: #eee;
}

.actionContent {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 102rpx;
  width: 100%;
  border-top: 1rpx solid #eee;
  background-color: #fff;
  z-index: 10;
}

.actionContent view {
  width: 100rpx;
  height: 101rpx;
  border-right: 1rpx solid #eee;
  float: left;
}

.actionContent .follow {
  width: 100rpx;
  height: 101rpx;
  border-right: none;
  float: left;
}

.actionContent image {
  width: 38rpx;
  height: 38rpx;
  margin: 17rpx 33rpx 0;
  display: block;
}

.actionContent view text {
  font-size: 22rpx;
  width: 100%;
  margin-top: 10rpx;
  text-align: center;
  display: block;
  color: #888;
}

.addToCart {
  background-color: #ff9503;
  display: block;
  height: 100%;
  width: 220rpx;
  float: right;
  font-size: 32rpx;
  color: #fff;
  line-height: 101rpx;
  text-align: center;
}

.payForIt {
  background-color: #ff0137;
  display: block;
  height: 100%;
  width: 220rpx;
  float: right;
  font-size: 32rpx;
  color: #fff;
  line-height: 101rpx;
  text-align: center;
}

.swiperImage {
  width: 100%;
  height: 634rpx;
  display: block;
}

.priceContent {
  width: 100%;
  height: 170rpx;
  display: block;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
}

.price {
  display: block;
  padding-top: 30rpx;
  color: #ff0137;
  font-weight: 900;
  font-size: 36rpx;
  height: 66rpx;
  margin-left: 24rpx;
  box-sizing: border-box;
}

.marketPrice {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  height: 24rpx;
  color: #9e9e9e;
  text-decoration: line-through;
  margin-left: 24rpx;
}

.otherNumber {
  margin-top: 22rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  color: #9e9e9e;
  display: flex;
  padding: 0 24rpx;
  justify-content: space-between;
}

.goodsName {
  background-color: #fff;
  padding: 20rpx 24rpx;
  font-size: 31rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
  line-height: 36rpx;
}

.advContent {
  height: 190rpx;
  width: 100%;
  background-color: #fff;
  padding: 4rpx 24rpx 30rpx;
}

.logoImg {
  display: block;
  background-color: #eee;
  width: 146rpx;
  height: 154rpx;
  padding: 28rpx 24rpx;
  border-radius: 10rpx 0 0 10rpx;
  float: left;
  box-sizing: border-box;
}

.advText {
  display: block;
  background-color: #eee;
  height: 154rpx;
  padding: 36rpx 30rpx 36rpx 36rpx;
  float: left;
  box-sizing: border-box;
  width: 554rpx;
  border-radius: 0 10rpx 10rpx 0;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #888;
}

.userInfo {
  margin-top: 18rpx;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}

.userInfo view {
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0rpx 24rpx;
  font-size: 24rpx;
  color: #222;
  line-height: 100rpx;
}

.userInfo view.address {
  color: #666;
}

.getTicket {
  float: right;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  width: 80rpx;
  height: 40rpx;
  display: block;
  margin: 29rpx 0;
  line-height: 40rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 22rpx;
  color: #bfbfbf;
}

.address image {
  float: right;
  width: 24rpx;
  height: 24rpx;
  margin: 37rpx 0;
}

.goodsDetail {
  width: 100%;
  margin-top: 18rpx;
  background-color: #fff;
  margin-bottom: 114rpx;
}

.detailImage {
  width: 100%;
  margin-top: -94rpx;
  margin-bottom: 114rpx;
}

.detailTitle {
  height: 100rpx;
  width: 100%;
  padding: 0 24rpx;
  font-size: 26rpx;
  line-height: 100rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  display: block;
}

.goodsSpec {
  width: 100%;
  padding: 17rpx 24rpx;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  display: block;
}

.goodsStar {
  height: 100rpx;
  width: 100%;
  padding: 0 24rpx;
  font-size: 26rpx;
  line-height: 100rpx;
  color: #ff9503;
  border-bottom: 1rpx solid #eee;
  display: block;
  box-sizing: border-box;
}

.goodsStar image {
  float: right;
  height: 26rpx;
  width: 26rpx;
  display: block;
  margin: 37rpx 5rpx;
}
